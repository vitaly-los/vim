"git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
" Make dir colors in .vim folder cd ~/.vim  mkdir colors
" wget https://raw.githubusercontent.com/gosukiwi/vim-atom-dark/master/colors/atom-dark-256.vim

set nocompatible              " be iMproved, required
filetype off                  " required

call plug#begin('~/.vim/plugged')
Plug 'scrooloose/nerdtree'

" Add support for PHP autocomplete
Plug 'phpactor/phpactor', {'do': 'composer install', 'for': 'php'}
Plug 'phpactor/ncm2-phpactor'
Plug 'ncm2/ncm2'
Plug 'roxma/nvim-yarp'
Plug 'ncm2/ncm2-bufword'
Plug 'ncm2/ncm2-path'

Plug 'jiangmiao/auto-pairs'
Plug 'luochen1990/rainbow'
Plug 'tmhedberg/SimpylFold'
Plug 'Vimjas/vim-python-pep8-indent'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'thaerkh/vim-workspace'
Plug 'nvie/vim-flake8'
Plug 'tpope/vim-surround'   
Plug 'tpope/vim-fugitive'
Plug 'mattn/emmet-vim'
Plug 'zhou13/vim-easyescape'

call plug#end() 
" :PlugInstall    - installs plugins; append `!` to update or just :PlugUpdate
" :PlugClean      - confirms removal of unused plugins
" :PlugStatus     - check the status of plugins


" OR ELSE just the 81st column of wide lines...
highlight ColorColumn ctermbg=magenta
call matchadd('ColorColumn', '\%81v', 100)

"====[ Swap : and ; to make colon commands easier to type  ]======
nnoremap  ;  :
nnoremap  :  ;

"---------- Setting --------------"
let g:workspace_autosave_always = 1

set autochdir   "
set number
set encoding=utf-8
set title
set showmatch

" Tab options
set autoindent              " copy indent from previous line
set smartindent             " enable nice indent
set expandtab               " tab with spaces
set smarttab                " indent using shiftwidth"
set shiftwidth=4            " number of spaces to use for each step of indent
set softtabstop=4           " tab like 4 spaces
set shiftround              " drop unused spaces

"---------- Split Management --------------"
nmap <C-J> <C-W><C-J>
nmap <C-K> <C-W><C-K>
nmap <C-H> <C-W><C-H>
nmap <C-L> <C-W><C-L>

"----------Plugins --------------"
" on vim start nerdtree
autocmd vimenter * NERDTree
let NERDTreeIgnore=['\.pyc$', '\.pyo$', '__pycache__$']     " Ignore files in NERDTree
let NERDTreeWinSize=40

" Disable docstring window to popup for Jedi
autocmd FileType python setlocal completeopt-=preview

" Colour braces
let g:rainbow_active = 1


" Enable color scheme
"set t_CO=256
set background=dark
colorscheme atom-dark-256

" Dark theme for airline
let g:airline_theme='badwolf'
" let g:airline#extensions#tabline#enabled=1
let g:airline#extensions#tabline#formatter='unique_tail'
let g:airline_powerline_fonts=1
            
" Enable folding
set foldmethod=indent
set foldlevel=99
" Enable folding with the spacebar
nnoremap <space> za

" For easy escape plugin
let g:easyescape_chars = { "j": 1, "k": 1  }
let g:easyescape_timeout = 100
cnoremap jk <ESC>
cnoremap kj <ESC>

" enable ncm2 for all buffers
autocmd BufEnter * call ncm2#enable_for_buffer()
set completeopt=noinsert,menuone,noselect
let g:phpactorPhpBin = "/usr/bin/php7.3"
