"git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
" Make dir colors in .vim folder cd ~/.vim  mkdir colors
" wget https://raw.githubusercontent.com/gosukiwi/vim-atom-dark/master/colors/atom-dark-256.vim
" Plugin 'thaerkh/vim-workspace' autosave plugin    let g:workspace_autosave_always = 1
set nocompatible              " be iMproved, required
filetype off                  " required

" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'VundleVim/Vundle.vim'
Plugin 'tpope/vim-vinegar'
Plugin 'scrooloose/nerdtree'
Plugin 'StanAngeloff/php.vim'
Plugin 'arnaud-lb/vim-php-namespace'
Plugin 'jiangmiao/auto-pairs'
Plugin 'luochen1990/rainbow'
Plugin 'tmhedberg/SimpylFold'
Plugin 'Vimjas/vim-python-pep8-indent'
Plugin 'davidhalter/jedi-vim'
Plugin '907th/vim-auto-save'

call vundle#end()            " required
filetype plugin indent on    " required
" :PluginInstall    - installs plugins; append `!` to update or just :PluginUpdate
" :PluginClean      - confirms removal of unused plugins


" OR ELSE just the 81st column of wide lines...
highlight ColorColumn ctermbg=magenta
call matchadd('ColorColumn', '\%81v', 100)

"====[ Swap : and ; to make colon commands easier to type  ]======
nnoremap  ;  :
nnoremap  :  ;

"---------- Setting --------------"
let g:auto_save = 1  " enable AutoSave on Vim startup 
let g:auto_save_silent = 1  " do not display the auto-save notification 
let g:auto_save_events = ["InsertLeave", "TextChanged", "TextChangedI", "CursorHoldI"]  " autosave event

set tabstop=4 shiftwidth=4 expandtab 
set autochdir   " 
set number
set encoding=utf-8

"---------- Split Management --------------"
nmap <C-J> <C-W><C-J>
nmap <C-K> <C-W><C-K>
nmap <C-H> <C-W><C-H>
nmap <C-L> <C-W><C-L>

"----------Plugins --------------"
map <F3> :NERDTreeToggle<cr>

" Colour braces
let g:rainbow_active = 1


"set t_CO=256
set background=dark
colorscheme atom-dark-256


" Enable folding
set foldmethod=indent
set foldlevel=99
" Enable folding with the spacebar
nnoremap <space> za







